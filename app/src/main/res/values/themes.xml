<resources>
    <!-- Base application theme. -->
    <style name="Theme.Rates" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="android:textColorPrimary">@color/colorTextTitle</item>
        <item name="android:textColorSecondary">@color/colorTextTitle</item>
        <item name="android:minHeight">@dimen/toolbar_min_height</item>
        <item name="fontFamily">@font/roboto</item>
    </style>
</resources>